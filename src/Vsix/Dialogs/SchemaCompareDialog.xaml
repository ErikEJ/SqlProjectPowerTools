<dw:DialogWindow x:Class="SqlProjectsPowerTools.SchemaCompareDialog"
                 xmlns:dw="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 mc:Ignorable="d"
                 Title="Visual Schema Compare"
                 WindowStyle="SingleBorderWindow"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="CanResize"
                 ShowInTaskbar="False"
                 MinWidth="800"
                 MinHeight="500"
                 Width="1000"
                 Height="700">

    <dw:DialogWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </dw:DialogWindow.Resources>

    <dw:DialogWindow.Background>
        <StaticResource ResourceKey="DialogWindowBackgroundColor"/>
    </dw:DialogWindow.Background>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header: Source/Target info -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Source (Project): " FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" x:Name="SourceLabel" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
            <TextBlock Grid.Column="2" Text="Target (Database): " FontWeight="SemiBold" VerticalAlignment="Center" Margin="16,0,0,0"/>
            <TextBlock Grid.Column="3" x:Name="TargetLabel" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
        </Grid>

        <!-- Main content: TabControl -->
        <TabControl Grid.Row="1" x:Name="MainTabControl">

            <!-- Differences tab -->
            <TabItem Header="Differences">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="120"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*" MinHeight="100"/>
                    </Grid.RowDefinitions>

                    <!-- Differences grid -->
                    <DataGrid Grid.Row="0"
                              x:Name="DifferencesGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              SelectionChanged="DifferencesGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="200"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding ObjectType}" Width="120"/>
                            <DataGridTextColumn Header="Difference" Binding="{Binding DifferenceType}" Width="100"/>
                            <DataGridTextColumn Header="Action" Binding="{Binding UpdateAction}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Splitter -->
                    <GridSplitter Grid.Row="1"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  Height="5"
                                  Background="LightGray"
                                  ResizeDirection="Rows"/>

                    <!-- Source / Target scripts side by side -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Source (Project)" FontWeight="SemiBold" Margin="0,4,0,4"/>
                            <TextBox Grid.Row="1"
                                     x:Name="SourceScriptBox"
                                     IsReadOnly="True"
                                     TextWrapping="NoWrap"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     AcceptsReturn="True"
                                     Background="White"
                                     Foreground="Black"/>
                        </Grid>

                        <GridSplitter Grid.Column="1"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Stretch"
                                      Width="5"
                                      Background="LightGray"
                                      ResizeDirection="Columns"/>

                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Target (Database)" FontWeight="SemiBold" Margin="0,4,0,4"/>
                            <TextBox Grid.Row="1"
                                     x:Name="TargetScriptBox"
                                     IsReadOnly="True"
                                     TextWrapping="NoWrap"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     AcceptsReturn="True"
                                     Background="White"
                                     Foreground="Black"/>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Deployment Script tab -->
            <TabItem Header="Deployment Script">
                <TextBox x:Name="DeploymentScriptBox"
                         IsReadOnly="True"
                         TextWrapping="NoWrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="12"
                         AcceptsReturn="True"
                         Background="White"
                         Foreground="Black"/>
            </TabItem>
        </TabControl>

        <!-- Footer: status + close button -->
        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" x:Name="StatusLabel" VerticalAlignment="Center" Foreground="Gray"/>
            <dw:DialogButton Grid.Column="1"
                             Content="Close"
                             IsCancel="True"
                             MinWidth="70"
                             Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</dw:DialogWindow>
