<UserControl x:Class="SqlProjectsPowerTools.SchemaCompareWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" MinWidth="700" MinHeight="400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" BorderBrush="#FFDDDDDD" BorderThickness="0,0,0,1" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Source (Project): " FontWeight="SemiBold" VerticalAlignment="Center" />
                <TextBlock Grid.Column="1" Text="{Binding SourceDisplay}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                <TextBlock Grid.Column="2" Text="Target (Database): " FontWeight="SemiBold" VerticalAlignment="Center" Margin="16,0,0,0" />
                <TextBlock Grid.Column="3" Text="{Binding TargetDisplay}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
            </Grid>
        </Border>

        <!-- Main content -->
        <TabControl Grid.Row="1" Margin="8">
            <TabItem Header="Differences">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="3*" />
                    </Grid.RowDefinitions>

                    <!-- Differences grid -->
                    <DataGrid Grid.Row="0" ItemsSource="{Binding Differences}" AutoGenerateColumns="False" IsReadOnly="True"
                              SelectedItem="{Binding SelectedDifference, Mode=TwoWay}" CanUserAddRows="False"
                              HeadersVisibility="Column" SelectionMode="Single" SelectionUnit="FullRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="200" />
                            <DataGridTextColumn Header="Type" Binding="{Binding ObjectType}" Width="120" />
                            <DataGridTextColumn Header="Difference" Binding="{Binding DifferenceType}" Width="100" />
                            <DataGridTextColumn Header="Action" Binding="{Binding UpdateAction}" Width="80" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Splitter -->
                    <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                  Height="5" Background="LightGray" ResizeDirection="Rows" />

                    <!-- Side-by-side diff view -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Source diff panel -->
                        <GroupBox Grid.Column="0" Margin="0,0,2,0">
                            <GroupBox.Header>
                                <TextBlock Text="Source (Project)" FontWeight="SemiBold" />
                            </GroupBox.Header>
                            <Grid>
                                <ListView ItemsSource="{Binding SourceDiffLines}" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto" BorderThickness="0">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Padding" Value="0" />
                                            <Setter Property="FontFamily" Value="Consolas" />
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DiffType}" Value="Inserted">
                                                    <Setter Property="Background" Value="#FFE1FFE1" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DiffType}" Value="Deleted">
                                                    <Setter Property="Background" Value="#FFF7D6D6" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DiffType}" Value="Modified">
                                                    <Setter Property="Background" Value="#FFE9F3FF" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Opacity="{Binding Opacity}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="24" />
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Indicator}" HorizontalAlignment="Center" />
                                                <TextBlock Grid.Column="1" Text="{Binding LineNumber}" Foreground="#FF888888"
                                                           HorizontalAlignment="Right" Margin="0,0,8,0" />
                                                <TextBlock Grid.Column="2" Text="{Binding Text}" TextWrapping="NoWrap"
                                                           FontFamily="Consolas" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <TextBlock Text="Select a difference to preview the source definition." Foreground="#FF666666"
                                           FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedDifference}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </GroupBox>

                        <!-- Splitter -->
                        <GridSplitter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                      Width="5" Background="LightGray" ResizeDirection="Columns" />

                        <!-- Target diff panel -->
                        <GroupBox Grid.Column="2" Margin="2,0,0,0">
                            <GroupBox.Header>
                                <TextBlock Text="Target (Database)" FontWeight="SemiBold" />
                            </GroupBox.Header>
                            <Grid>
                                <ListView ItemsSource="{Binding TargetDiffLines}" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto" BorderThickness="0">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Padding" Value="0" />
                                            <Setter Property="FontFamily" Value="Consolas" />
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DiffType}" Value="Inserted">
                                                    <Setter Property="Background" Value="#FFE1FFE1" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DiffType}" Value="Deleted">
                                                    <Setter Property="Background" Value="#FFF7D6D6" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding DiffType}" Value="Modified">
                                                    <Setter Property="Background" Value="#FFE9F3FF" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Opacity="{Binding Opacity}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="24" />
                                                    <ColumnDefinition Width="50" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Indicator}" HorizontalAlignment="Center" />
                                                <TextBlock Grid.Column="1" Text="{Binding LineNumber}" Foreground="#FF888888"
                                                           HorizontalAlignment="Right" Margin="0,0,8,0" />
                                                <TextBlock Grid.Column="2" Text="{Binding Text}" TextWrapping="NoWrap"
                                                           FontFamily="Consolas" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <TextBlock Text="Select a difference to preview the target definition." Foreground="#FF666666"
                                           FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedDifference}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Deployment Script tab -->
            <TabItem Header="Deployment Script">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,4">
                        <Button Content="Copy Script" Width="120" Click="CopyDeploymentScript_Click" />
                    </StackPanel>
                    <TextBox Grid.Row="1" Text="{Binding DeploymentScript, Mode=OneWay}" FontFamily="Consolas" FontSize="12"
                             AcceptsReturn="True" TextWrapping="NoWrap" HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Auto" IsReadOnly="True" />
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status bar -->
        <Border Grid.Row="2" BorderBrush="#FFDDDDDD" BorderThickness="0,1,0,0" Padding="8">
            <DockPanel>
                <TextBlock Text="{Binding Status}" VerticalAlignment="Center" />
                <ProgressBar Width="180" Height="16" Margin="12,0,0,0" IsIndeterminate="True"
                             Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
